<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @article.summary %>
</p>

<h3>Comments</h3>

<ul>
	<% @article.comments.each do |comment| %>
		<li><%= comment.user.alias %>: <%= comment.comment %> <%= link_to "Up", vote_up_comment_path(@article, comment), :remote => true %>/<%= link_to "Down", vote_down_comment_path(@article, comment), :remote => true %></li>
	<% end %>
</ul>

<%= form_for([@article, @article.comments.build], html: { class: "form-horizontal" }) do |f| %>

	<div class="control-group">
		<%= f.label :comment, class: "control-label" %>
		<div class="controls">
			<%= f.text_area :comment %>
		</div>
	</div>

	

	<div class="control-group">
		<div class="controls">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
		
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
